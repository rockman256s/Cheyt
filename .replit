modules = ["python-3.11", "flutter", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run main.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "kivy_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "beeware_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "streamlit_app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "calculator"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android_build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flutter_build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "briefcase_android_build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "setup_environment"

[[workflows.workflow]]
name = "kivy_app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main_android.py"

[[workflows.workflow]]
name = "android_app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "beeware_app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python beeware_app.py"

[[workflows.workflow]]
name = "streamlit_app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "calculator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "android_build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf .buildozer && buildozer -v android debug"

[[workflows.workflow]]
name = "flutter_build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter config --android-sdk $ANDROID_SDK_ROOT && flutter build apk --debug"

[[workflows.workflow]]
name = "briefcase_android_build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "yes | briefcase create android && yes | briefcase build android --update"

[[workflows.workflow]]
name = "setup_environment"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install --upgrade pip && pip install streamlit pandas numpy altair scipy scikit-learn"

[[ports]]
localPort = 5000
externalPort = 80
